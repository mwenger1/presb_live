<div class="your">
  <% if @user_hangouts.present? %>
  <h2>Your Hangouts</h2>
  <% @user_hangouts.each do |hangout| %>
  <div class="expandableHangout">
    <div class="hangoutTitle">
      <div class="title"><%= hangout.title %></div>
      <div class="time"><%= hangout.time %></div>

    </div>
    <span class="expandIcon">▼</span>

    <div class="hangouts_list">
    <% hangout.tags.each do |t|  %>
      <span class="<%= t.name %>"><%= t.name %></span>
    <% end %>
    </div>
  </div>
  <div class="hiddenHangoutText" style="display:none;">
        <%= hangout.description %><br>
        Maximum number of participants: <%= hangout.max_participants %>
    <%= link_to 'Edit Your Event', edit_hangout_path(hangout) %>

  </div>
  <br>
  <% end %>
  <% end %>
</div>
